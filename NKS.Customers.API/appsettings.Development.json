{
  "SwaggerConfiguration": {
    "Name": "Customers",
    "Version": "1",
    "Author": "N Kishor",
    "Title": "Customer Management API",
    "Description": "Managing customers with REST API."
  },
  "WeatherAPISettings": {
    "OpenWeatherHost": "https://api.openweathermap.org",
    "ApiKey": "-10f31739ade2c462e0b9182b8eeb3c0-9"
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Me\\ApplicationLogs\\MicroserivceTemplate\\Customers-.txt",
          "fileSizeLimitBytes": 10240,
          "rollingInterval ": "Day",
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "Serilog.WebApplication"
    }
  },
  "ApplicationInsights": {
    "LogLevel": {
      "Microsoft": "Error"
    },
    "InstrumentationKey": "",
    "Debug": true
  },
  "ConnectionStrings": {
    "CustomersDatabase": "Server=kishor;Database=NKS.Customers;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "AllowedHosts": "*"
}